---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<!-- <link -->
		<!-- 	rel="stylesheet" -->
		<!-- 	href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css" -->
		<!-- /> -->
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	:root {
		--primary-color: #835e54;
		--primary-bg: #fff;
		--primary-fg: #443728;
		/*--: #23272f;
		--: #f6f7f9;*/
		--primary-color-1: rgba(45, 79, 253, 1);
		--main-padding: 2rem;
	}

	html,
	body {
		width: 100dvw;
		height: 100dvh;
		font-family: system-ui, sans-serif;
		padding: 0px;
		margin: 0px;
		scroll-behavior: smooth;
	}
</style>
